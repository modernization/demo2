        <td><%= complaint.cmtanonymous %></td>
        <td><%= complaint.cmtfirstnm %></td>
        <td><%= complaint.cmtmiddlenm %></td>
        <td><%= complaint.cmtlastnm %></td>
        <td><%= complaint.cmtst1 %></td>
        <td><%= complaint.cmtst2 %></td>
        <td><%= complaint.cmtcity %></td>
        <td><%= complaint.cmtst %></td>
        <td><%= complaint.cmtzip %></td>
        <td><%= complaint.cmtcountry %></td>       
